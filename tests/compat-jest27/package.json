{
    "name": "compat-jest27",
    "version": "0.9.0",
    "description": "Package to test @propcheck/jest against jest 27.x",
    "license": "MIT",
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "lint": "echo 'nothing to do'",
        "test": "jest"
    },
    "jest": {
        "preset": "ts-jest",
        "watchPathIgnorePatterns": [
            "<rootDir>/node_modules/"
        ],
        "globals": {
            "ts-jest": {
                "tsconfig": "tsconfig.json"
            }
        },
        "setupFilesAfterEnv": [
            "@propcheck/jest"
        ],
        "reporters": [
            "jest-standard-reporter"
        ]
    },
    "devDependencies": {
        "@propcheck/core": "workspace:*",
        "@propcheck/jest": "workspace:*",
        "@types/jest": "27.4.0",
        "jest": "27.5.0",
        "ts-jest": "27.1.3",
        "typescript": "4.8.4"
    }
}
